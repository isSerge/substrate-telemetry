    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.4.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css}": [
      "pretty:fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
