    "react-dom": "^18.2.0",
    "react-measure": "^2.5.2",
    "react-scripts": "5.0.1",
    "stable": "^0.1.8",
    "tslint": "^6.1.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.58",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/tape": "^4.13.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "identity-obj-proxy": "^3.0.0",
